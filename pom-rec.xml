
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>es.eps.tfg</groupId>
    <artifactId>TwitterRecommender</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>TwitterRecommender</name>
    <url>http://www.recommenders.net</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jettyVersion>7.6.4.v20120524</jettyVersion>
    </properties>

    <repositories>
        <repository>
            <id>twitter4j.org</id>
            <name>twitter4j.org Repository</name>
            <url>http://twitter4j.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>repo1</id>
            <url>http://repo1.maven.org/maven2</url>
        </repository>
        <!--  repository>
            <id>repo2</id>
            <url>http://download.java.net/maven/2</url>
        </repository>
        <repository>
            <id>repo3</id>
            <url>http://repository.jboss.com/maven2</url>
        </repository>
        <repository>
            <id>repo4</id>
            <url>http://maven.apache.org/</url>
        </repository>
        <repository>
            <id>repo5</id>
            <url>http://repo2.maven.org/maven2</url>
        </repository -->
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.6.6</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>apache-log4j-extras</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>${jettyVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20090211</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.3.2</version>
        </dependency>
        <dependency>
            <groupId>net.recommenders</groupId>
            <artifactId>plistarecs</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>net.recommenders</groupId>
            <artifactId>plista</artifactId>
            <version>0.1</version>
        </dependency>
        <dependency>
            <groupId>org.twitter4j</groupId>
            <artifactId>twitter4j-core</artifactId>
            <version>4.0.2-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.7.2</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                        <compilerArgument></compilerArgument>
                    </configuration>
                </plugin>
		<plugin>
                	<groupId>org.codehaus.mojo</groupId>
	                <artifactId>exec-maven-plugin</artifactId>
        	        <executions>
                	    <execution>
                        	<goals>
	                            <goal>java</goal>
        	                </goals>
                	    </execution>
	                </executions>
        	        <configuration>
                	    <mainClass>net.recommenders.plista.client.Client</mainClass>
	                    <systemProperties>
        	                <systemProperty>
                	            <key>propertyFile</key>
                        	    <value>${basedir}/${propertyFile}</value>
	                        </systemProperty>
        	            </systemProperties>
                	</configuration>
	                <version>1.2</version>
	        </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>

